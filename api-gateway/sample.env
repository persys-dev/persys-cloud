# Persys API Gateway Sample Environment Variables

# MongoDB connection URI
MONGODB_URI=mongodb://mongo:27017
MONGODB_DATABASE=persys

# TLS certificate paths (if not using config.toml)
TLS_CERT_PATH=/etc/persys/certs/api-gateway.crt
TLS_KEY_PATH=/etc/persys/certs/api-gateway.key
TLS_CA_PATH=/etc/persys/certs/ca.pem

# CoreDNS address (if not using config.toml)
COREDNS_ADDR=persys-coredns:1053

# CFSSL API URL (if not using config.toml)
CFSSL_API_URL=https://persys-cfssl:8888

# GitHub OAuth credentials (if not using config.toml)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_URL=https://api.persys-cloud.com/webhook
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Logging
LOG_LEVEL=info
LOKI_ENDPOINT=

# Telemetry
TELEMETRY_ADDR=jaeger:4318

# HTTP server address (if not using config.toml)
HTTP_ADDR=:8551 